<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coderx.assignment01">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AdvancedActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/advanced"/>
        <activity android:name=".IdentifyImageActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/car_image"/>
        <activity android:name=".HintActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/hint"/>
        <activity android:name=".IdentifyCarMakeActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/car_make"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>